<p id="notice"><%= notice %></p>

<h1 class="h2">Properties</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Price</th>
      <th scope="col">Room</th>
      <th scope="col">Bathrooms</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.address %></td>
        <td><%= property.price %></td>
        <td><%= property.room %></td>
        <td><%= property.bathrooms %></td>
        <td><%= link_to 'Show', property,class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_property_path(property),class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Property', new_property_path, class:"btn btn-success" %>
