<%= form_tag email_agent_path, id:"email-agent"  do %>
  <h1><%= @agents.full_name %></h1>
    <%= hidden_field_tag :agent_id, @agents.id  %>
  <div class="form-group">
    <label for="message-first-name">First name</label>
   <%= text_field_tag :first_name,nil, class: "form-control", id: "message-first-name"  %>
  </div>
  <div class="form-group">
    <label for="message-last-name">Last name</label>
   <%= text_field_tag :last_name,nil, class: "form-control", id: "message-last-name"  %>
  </div>
  <div class="form-group">
    <label for="message-email">Email</label>
   <%= text_field_tag :email,nil, class: "form-control", id: "message-email"  %>
  </div>
  <div class="form-group">
    <label for="message-email">message</label>
    <textarea id="message-text" rows="8" cols="80"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" id="send">Send</button>
<% end %>
