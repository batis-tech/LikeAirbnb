<div class=" property-main-photo" style="background-image:url('<%= property_photo @property %>')">
  <div class="photo-overlay"></div>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <div class="col-6">
          <p class="mb-0"><%= @property.address %></p>
          <p class="h2"><%= @property.price > 0 ? number_to_currency(@property.price, precision:0) : "For sale" %></p>
        </div>
        <div class="col-6">
          <div class="row">
            <div class="col-4 text-center">
              <p class="m-0">
                <strong>Rooms</strong>
              </p>
              <span class="lead">
                <%= @property.room %></span>
            </div>
            <div class="col-4 text-center">
              <p class="m-0">
                <strong>Bathrooms</strong>
              </p>
              <span class="lead">
                <%= @property.bathrooms %></span>
            </div>
            <div class="col-4 text-center">
              <p class="m-0">
                <strong>Parking spaces</strong>
              </p>
              <span class="lead">
                <%= @property.parking_spaces %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-5 border-top border-bottom pt-4 pb-4 pd-4 mt-4 mb-4">
        <div class="col-6 ">
          <strong class="text-success">Est. Monthly Repayments of
            <%= number_to_currency(( @property.price / 360), precision: 0) %></strong>
        </div>
        <div class="col-6" >
          <strong style="float: right;"><%= link_to "Can i afford this property","#",class: "text-success" %></strong>
        </div>
      </div>
    </div>
    <div class="col-4 mt-0">
      Agent info
      <%= render "properties/agent_details"%>

    </div>
    <div class="col-8 mt-2">
      <p class="h2">Property Description</p>
      <p><%= @property.name %></p>
      <%= simple_format @property.details %>
      <!-- <%= link_to 'Edit', edit_property_path(@property) %> | <%= link_to 'Back', properties_path %>-->
    </div>

  </div>
</div>
