<!DOCTYPE html>
<html>
  <head>
    <title>Aribnb</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_url "favicon_io/apple-touch-icon.png" %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= asset_url "favicon_io/favicon-32x32.png" %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= asset_url "favicon_io/favicon-16x16.png" %>">
    <link rel="manifest" href="/site.webmanifest">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">

        <% if @set_sidebar.nil? %>
          <header>
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
            <%= render 'layouts/nav/public' %>
          </header>
          <%= yield %>
          <%= render 'layouts/footer'%>
        <% else %>

            <%= render 'layouts/nav/dashboard' %>
            <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-4">
              <%= yield %>

            </div>
            <%= render 'layouts/footer'%>

        <% end %>

      </div>
    </div>
    <% unless flash.empty? %>
       <script type="text/javascript">
          <% flash.each do |f| %>
        <% type = f[0].to_s.gsub('alert', 'danger').gsub('notice', 'success') %>
         toastr['<%= type %>']('<%= f[1] %>');
       <% end %>
       </script>
    <% end %>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    </body>
</html>
